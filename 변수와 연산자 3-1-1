//프로그램 사용자로부터 두 개의 정수를 입력 받아서
//두 수의 뺄셈과 곱셈의 결과를 출력하는 프로그램을 작성하라.

#include <stdio.h>
#define _CRT_SECURE_NO_WARNINGS

int main(void)
{
	int num1, num2, minus, plus;//정수형으로 정의
	
	printf("두 개의 정수를 입력하시오: ");
	scanf("%d %d", &num1, &num2);//두 개의 정수 입력받기

	plus = num1 + num2;//덧셈식
	minus = num1 - num2;//뺄셈식

	printf("두 수의 합은 %d입니다.\n", plus);
	printf("두 수의 차는 %d입니다.\n", minus);//사용자에게 출력

	return 0;
}
